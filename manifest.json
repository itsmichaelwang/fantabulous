{
    "manifest_version": 2,

    "name": "Fantabulous",
    "description": "Say goodbye to tab clutter",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [ "jquery-2.1.4.min.js" ],
            "matches": [ "http://*/*", "https://*/*" ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}
