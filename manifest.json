{
    "manifest_version": 2,

    "name": "Fantabulous",
    "description": "Say goodbye to tab clutter",
    "version": "1.0",

    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "tabs"
    ],
    
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            }
        }
    }
}
